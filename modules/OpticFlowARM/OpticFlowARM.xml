<!DOCTYPE module SYSTEM "../module.dtd">

<module name="OpticFlowARM">
  <doc>
    <description>Video ARDone 2</description>
  </doc>

  <header>
    <file name="opticflowarm_module.h"/>
  </header>

  <periodic fun="opticflow_module_run()" freq="1" start="opticflow_module_start()" stop="opticflow_module_stop()" autorun="TRUE"/>
  <makefile>
      <raw>

include $(PAPARAZZI_HOME)/sw/ext/ardrone2_vision/Makefile.paths
          
VISION_MODULE_FOLDER = $(DIR_MODULES)/OpticFlowARM

$(TARGET).srcs += $(VISION_MODULE_FOLDER)/opticflowarm_module.c
$(TARGET).srcs += $(VISION_MODULE_FOLDER)/opticflow_sobel_2.c
$(TARGET).srcs += $(VISION_MODULE_FOLDER)/calcFlowXYZ.c
$(TARGET).srcs += $(DIR_CV)/encoding/jpeg.c
$(TARGET).srcs += $(DIR_CV)/encoding/rtp.c
$(TARGET).srcs += $(DIR_LIB)/udp/socket.c
$(TARGET).srcs += $(DIR_LIB)/v4l/video.c
$(TARGET).srcs += $(DIR_LIB)/v4l/ardrone2.c
$(TARGET).CFLAGS += -I$(DIR_MODULES) -I$(DIR_CV) -I$(DIR_LIB) -pthread -D__USE_GNU
$(TARGET).LDFLAGS += -pthread -lrt -static

    </raw>
  </makefile>
</module>